extends layout.pug 

block content
    include nav.pug
    include side.pug
    div.web
        div.contant
            h1.text-center.text-uppercase.p-3 question page
            div.container
                div.row
                    div.col-lg-3
                    div.col-lg-6.card.p-4
                        each item in data
                            form(action="/admin/update" method="post")
                                //- div.mb-4.text-center
                                //-     p=message
                                input(type="hidden" id="xid" name="xid" class="form-control" value=item.id)
                                div.mb-4
                                    label(for="rid" class="col-sm-2 form-label fw-bold display-7") Reference Id
                                    select(id="rid" name="rid" class="col-sm-12 p-2 drop")
                                        option(value="Select ID") Select Refereance Id
                                        each item in ridd    
                                            option #{item.rid} 
                                div.mb-4
                                    label(for="lid" class="col-sm-2 form-label fw-bold display-7") Level Id
                                    select(id="lid" name="lid" class="col-sm-12 p-2 drop")
                                        option(value="Select ID") Select Level Id
                                        each item in lidd    
                                            option #{item.lid} 
                                div.mb-4
                                    label(for="que_num" class="form-label fw-bold display-7") Question No.
                                    input(type="text" class="form-control" id="que_num" value=item.questionnumber name="que_num" aria-describedby="que_num" placeholder="Enter Question Number")
                                div.mb-4
                                    label(for="que" class="form-label fw-bold display-7") Question
                                    input(type="text" class="form-control" id="que" value=item.question name="que" aria-describedby="que" placeholder="Enter Question")
                                div.mb-4
                                    label(for="a" class="form-label fw-bold display-7") Option 1
                                    input(type="text" class="form-control" id="a" value=item.a name="a" aria-describedby="a" placeholder="Enter Option 1")
                                div.mb-4
                                    label(for="b" class="form-label fw-bold display-7") Option 2
                                    input(type="text" class="form-control" id="b"  value=item.b name="b" aria-describedby="b" placeholder="Enter Option 2")
                                div.mb-4
                                    label(for="c" class="form-label fw-bold display-7") Option 3
                                    input(type="text" class="form-control" id="c" value=item.c name="c" aria-describedby="c" placeholder="Enter Option 3")
                                div.mb-4
                                    label(for="d" class="form-label fw-bold display-7") Option 4
                                    input(type="text" class="form-control" id="d" value=item.d name="d" aria-describedby="d" placeholder="Enter Option 4")
                                div.mb-4
                                    label(for="cans" class="form-label fw-bold display-7") Correct Answer
                                    input(type="text" class="form-control" id="cans" value=item.correctanswer name="cans" aria-describedby="cans" placeholder="Enter Correct Answer")
                                div.mb-4.text-center
                                    button(type="submit" class="btn btn-primary") Update
                        div.col-lg-3