extends layout_login.pug 

block content 
    div.login
        div.container
            div.row
                div.col-lg-2
                div.col-lg-8.frame
                    //- <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#login">Login</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#newuser">Newuser</a>
                        </li>
                    </ul>
                    //- <!-- Tab panes -->
                    <div class="tab-content">
                        <div id="login" class="container tab-pane active"><br>
                            div(id="loginbox")
                            h1.text-center.text-dark Login Page
                            form(action="/log" method="post" class="form")
                                div.mb-4.text-center.fw-bold.display-7
                                    p=message
                                div.mb-4
                                    label(for="email" class="form-label text-dark") Username
                                    input(type="email" class="form-control" id="email" name="xemail" aria-describedby="name" placeholder="User ID")
                                div.mb-4
                                    label(for="pass" class="form-label text-dark") Password
                                    input(type="password" class="form-control" id="pass"  name="xpass" placeholder="Password")
                                    span(toggle="#password-field" class="fa fa-eye eye mt-3" onclick="togglePassword()")
                                div.mb-4.text-center
                                    button(type="submit" class="btn btn-primary") Login
                                div.mb-4.text-center
                                    a(href="/fpass" class="text-decoration-none text-dark") Forget Password!!!
                        </div>
                        <div id="newuser" class="container tab-pane fade"><br>
                            div(id="regbox")    
                            h1.text-center.text-dark Registration Page
                            form(action="/reginsert" method="post" enctype="multipart/form-data")
                                    div.mb-4.text-center.fw-bold.display-7
                                        p=message
                                    div.mb-4
                                        label(for="name" class="form-label") Name
                                        input(type="text" class="form-control" id="name" name="xname" aria-describedby="name" placeholder="Enter your name")
                                    div.mb-4
                                        label(for="email" class="form-label") Email
                                        input(type="email" class="form-control" id="email" name="xemail" aria-describedby="email" placeholder="Enter your email")
                                    div.mb-4
                                        <i class="fa-solid fa-calendar-days"></i> &nbsp; 
                                        input(type="date" class="form-control" id="dob" name="xdob" aria-describedby="dob" placeholder="Enter your date of birth")
                                    div.mb-4
                                        h6 Gender
                                        <label class="radio-inline"><input type="radio" name="xgen" value="female" checked>Female</label>
                                        <label class="radio-inline"><input type="radio" name="xgen" value="male">Male</label>
                                        <label class="radio-inline"><input type="radio" name="xgen" value="other">Other</label>
                                    div.mb-4
                                        label(for="pass" class="form-label") Password
                                        input(type="password" class="form-control" id="pass"  name="xpass" aria-describedby="xpass" placeholder="Enter your password")
                                    div.mb-4
                                        label(for="cpass" class="form-label") Confirm Password
                                        input(type="password" class="form-control" id="cpass" name="xcpass" aria-describedby="pass" placeholder="Confirm Password")
                                    div.mb-4
                                        label(for="num" class="form-label") Contact Number
                                        input(type="text" class="form-control" id="num" name="xnum" aria-describedby="num" placeholder="Enter your contact number")
                                    div.mb-4
                                        label(for="image" class="form-label") Profile Picture
                                        input(type="file" class="form-control" id="xfile" name="xfile" aria-describedby="file")
                                    div.mb-4.text-center
                                        button(type="submit" class="btn btn-primary") SignUp
                        </div>
                    </div>
                div.col-lg-2
                        
        
                       
                    
    